<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    

    <Button android:id="@+id/christmas_button"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="75dp"
        android:background="@drawable/christmas_button"
        android:onClick="openChristmasGame"/>
    
    <Button android:id="@+id/kid_button"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="75dp"
        android:background="@drawable/kid_button"
        android:onClick="openKidGame"/>
    
</RelativeLayout>
