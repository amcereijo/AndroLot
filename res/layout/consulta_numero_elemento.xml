<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
    android:layout_margin="4dp"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/check_number_element_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:textColor="@android:color/black"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:paddingLeft="2dp"
        />
    <TextView
        android:id="@+id/check_number_element_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:textColor="@android:color/black"
        android:layout_centerVertical="true"
        android:paddingLeft="1dp"
        android:textStyle="bold"
        android:layout_toRightOf="@id/check_number_element_text"
        />
    <TextView
        android:id="@+id/check_number_element_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:textColor="@android:color/black"
        android:layout_alignParentBottom="true"
        android:paddingLeft="2dp"
        
        android:layout_below="@id/check_number_element_text"
        />
    
	
    <Button 
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:onClick="deleteNumber"
         android:drawableStart="@drawable/list_remove"
         android:background="@null"
         android:layout_alignParentRight="true"
         android:layout_centerVertical="true"
         android:padding="0dp"
         />

</RelativeLayout>