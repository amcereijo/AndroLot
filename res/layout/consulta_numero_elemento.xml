<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_margin="4dp">

	<RelativeLayout
	    android:layout_width="0dp"
	    android:layout_weight=".85"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">
	
	    <TextView
	        android:id="@+id/check_number_element_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 
	        android:textColor="@android:color/black"
	        android:layout_alignParentLeft="true"
	        android:paddingTop="4dp"
	        android:paddingLeft="2dp"
	        />
	    <TextView
	        android:id="@+id/check_number_element_number"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 
	        android:textColor="@android:color/black"
	        android:paddingTop="4dp"
	        android:paddingLeft="1dp"
	        android:textStyle="bold"
	        android:layout_toRightOf="@id/check_number_element_text"
	        />
	    <TextView
	        android:id="@+id/check_number_element_result"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 
	        android:textColor="@android:color/black"
	        android:layout_alignParentBottom="true"
	        android:paddingLeft="2dp"
	        android:paddingTop="2dp"
	        android:paddingBottom="4dp"
	        android:layout_below="@id/check_number_element_text"
	        />
	</RelativeLayout>
	<Button 
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:onClick="deleteNumber"
         android:background="@drawable/list_remove"
         android:layout_weight=".15"
         android:padding="0dp"
        />
	
</LinearLayout>